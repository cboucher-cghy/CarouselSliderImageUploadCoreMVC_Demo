@model CarouselSliderImageUpload_Demo.ViewModels.CarouselSliderViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Details</h4>
        </div>
        <div class="card-body">


            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageName)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/images/@Model.ExistingImage" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info text-uppercase rounded-0">Edit</a>
                <a asp-action="Index" class="btn btn-sm btn-primary text-uppercase rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>

